{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["src/config/*"],
      "@entities/*": ["src/database/entities/*"],
      "@middleware/*": ["src/middleware/*"],
      "@models/*": ["src/database/models/*"],
      "@modules/*": ["src/modules/*"],
      "@repositories/*": ["src/database/repositories/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
